<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/relative_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/input_number_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/header"
            android:cursorVisible="false"
            android:editable="false"
            android:gravity="center"
            android:hint="Input phone number"
            android:paddingLeft="0dp"
            android:paddingRight="60dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="27dp" />

        <ImageView
            android:id="@+id/clear_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/clear_img" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/call_btn"
        android:layout_below="@+id/relative_top_layout"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linear_one"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/one_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_two"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box1_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/two_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_three"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box2_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/three_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- second row -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linear_four"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/four_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_five"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box1_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/five_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_six"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box2_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/six_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Third Row -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linear_seven"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/seven_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="7"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_eight"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box1_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/eight_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="8"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_nine"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box2_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/nine_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="9"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- fourth Row -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/linear_star"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/star_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_zero"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box1_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/zero_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_hash"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/box2_selector"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/hash_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="#"
                    android:textColor="@color/black"
                    android:textSize="33dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/call_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/accept_selector" />

</RelativeLayout>