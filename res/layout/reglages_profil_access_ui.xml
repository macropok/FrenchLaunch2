    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/reglages_bg1"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="4dp"
        android:paddingTop="15dp" >

        <TextView
            android:id="@+id/txtQuestion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:singleLine="false"
            android:text="@string/reglages_q3_access"
            android:textColor="#ffffffff"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:textStyle="normal" />

       	<!-- <ImageView
            android:id="@+id/imgVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="1"
            android:scaleType="fitEnd"
            android:src="@drawable/volume" />-->

    </LinearLayout>

	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/reglages_bg2"
	    >
       	<ScrollView 
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_above="@+id/bottomLayout"
		    android:fillViewport="true" 
		    android:scrollbars="vertical"
		    >
		<LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
		    android:paddingLeft="15dp"
		    android:paddingRight="15dp"
		    android:paddingTop="2dp" >

			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical">

				<TextView
				    android:id="@+id/textView1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="15dp"
				    android:text="BÂTIMENT"
				    android:textColor="#ffafacaa"
				    android:textSize="18sp" />
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/configbox_bg1"
				    
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingTop="10dp"
				    android:paddingBottom="10dp"
				    android:orientation="horizontal" >

					<ImageView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center_vertical"
					    android:src="@drawable/batiment" />

			        <EditText
			            android:id="@+id/batiment"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:hint="BÂTIMENT"
			            android:singleLine="true" />

				</LinearLayout>
			</LinearLayout>
			
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:orientation="vertical">

				<TextView
				    android:id="@+id/textView2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="15dp"
				    android:text="ETAGE"
				    android:textColor="#ffafacaa"
				    android:textSize="18sp" />
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/configbox_bg1"
				    
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingTop="10dp"
				    android:paddingBottom="10dp"
				    android:orientation="horizontal" >

					<ImageView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center_vertical"
					    android:src="@drawable/etage" />

			        <EditText
			            android:id="@+id/etage"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:hint="ETAGE"
			            android:singleLine="true" />

				</LinearLayout>
			</LinearLayout>
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:orientation="vertical">

				<TextView
				    android:id="@+id/textView3"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="15dp"
				    android:text="PORTE"
				    android:textColor="#ffafacaa"
				    android:textSize="18sp" />
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/configbox_bg1"
				    
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingTop="10dp"
				    android:paddingBottom="10dp"
				    android:orientation="horizontal" >

					<ImageView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center_vertical"
					    android:src="@drawable/porte" />

			        <EditText
			            android:id="@+id/porte"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:hint="PORTE"
			            android:singleLine="true" />

				</LinearLayout>
			</LinearLayout>
			<LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="20dp"
		        android:orientation="vertical">

				<TextView
				    android:id="@+id/textView4"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_marginLeft="15dp"
				    android:text="INTERPHONE"
				    android:textColor="#ffafacaa"
				    android:textSize="18sp" />
				<LinearLayout 
				    android:id="@+id/messages"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:background="@drawable/configbox_bg1"
				    android:paddingLeft="10dp"
				    android:paddingRight="10dp"
				    android:paddingTop="10dp"
				    android:paddingBottom="10dp"
				    android:orientation="horizontal" >
					<ImageView
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_gravity="center_vertical"
					    android:src="@drawable/phone" />

			        <EditText
			            android:id="@+id/interphone"
			            android:layout_width="match_parent"
			            android:layout_height="wrap_content"
			            android:ems="10"
			            android:hint="INTERPHONE"
			            android:singleLine="true" />
				</LinearLayout>
			</LinearLayout>
			<Button
		        android:id="@+id/update"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center_horizontal"
		        android:layout_marginTop="20dip"
		      	android:background="@drawable/telephone_btn"
			    android:gravity="center"
			    android:paddingBottom="15dp"
			    android:paddingLeft="20dp"
			    android:paddingRight="0dp"
			    android:paddingTop="15dp"
		        android:text="SAUVEGARDER"
		        android:textColor="#ffffffff"
		        android:textSize="18sp" />
		</LinearLayout>
		</ScrollView>
		<LinearLayout
		    android:id="@id/bottomLayout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:layout_alignParentBottom="true"
		    android:orientation="vertical"
		    android:paddingBottom="5dp"
		    android:paddingLeft="15dp"
		    android:paddingRight="15dp" >

			<Button
			    android:id="@+id/btnBack"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_gravity="bottom"
			    android:layout_marginTop="10dp"
			    android:background="@drawable/back_btn"
			    android:gravity="center_vertical|center_horizontal"
			    android:paddingBottom="15dp"
			    android:paddingLeft="5dp"
			    android:paddingRight="5dp"
			    android:paddingTop="15dp"
			    android:text="@string/back_home"
			    android:textColor="#ffffffff"
			    android:textSize="18sp" />

		</LinearLayout>
   	</RelativeLayout>
</LinearLayout>